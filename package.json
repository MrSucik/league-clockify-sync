{
  "name": "league-clockify-sync",
  "version": "1.0.0",
  "description": "Riot Games API to Clockify Sync - Automatically sync your League of Legends game history to Clockify as time entries",
  "main": "index.js",
  "scripts": {
    "start": "tsx src/scripts/index.ts",
    "sync:lcu": "tsx src/scripts/sync-lcu.ts",
    "dev": "tsx watch src/scripts/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "league-of-legends",
    "riot-games",
    "gaming",
    "tracker",
    "clockify",
    "sync",
    "time-tracking",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@types/node": "^22.10.7",
    "@types/node-cron": "^3.0.11",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.7",
    "node-cron": "^4.2.1",
    "tsx": "^4.20.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/cli-progress": "^3.11.6",
    "typescript": "^5.7.3"
  }
}
